    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.30.0",
    "sass": "^1.90.0",
    "typescript": "5.8.2"
